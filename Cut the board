//https://www.codechef.com/problems/CUTBOARD
#include <iostream>
using namespace std;
int main()
{
    int t;
   cin>>t;
   int n[t]={0},m[t]={0};
   int r[t]={0};
   for(int i=0;i<t;i++)
   {
    cin>>n[i];
    cin>>m[i];
    r[i]=(n[i]-1)*(m[i]-1);
   }
    for(int i=0;i<t;i++)
   {
       cout<<r[i]<<endl;
   }
   return 0;
}
    
