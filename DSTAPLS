#include<iostream>
using namespace std;
int main()
{
    int t;
    cin>>t;
    for(int i=0;i<t;i++)
    {
        int n;
        int k;
        cin>>n>>k;
        if(n/k==k)
        {
            cout<<"NO"<<endl;
        }
        else if(n/k<k)
        {
            cout<<"YES"<<endl;
        }
        else if(n/k>k && k!=1)
        {
            cout<<"YES"<<endl;
        }
        else
        {
            cout<<"NO"<<endl;
        }
    }
    return 0;
}
